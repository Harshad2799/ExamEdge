package com.abm.examedge.controller;


import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.abm.examedge.entity.StudentDetails;
import com.abm.examedge.service.studentService;

@RestController
public class studentController {
	
	@Autowired
	private studentService stuservice;
	
	
	// http://localhost:8080/studentdetails?id=3   url for fetching student details
	@GetMapping("/studentdetails")
	public Optional<StudentDetails> findStudent(@RequestParam int id){
		return stuservice.editDetails(id);
		 
	}
	
	@PostMapping("/updaterecord/{id}")
	public String update(@RequestBody StudentDetails stu) {
		stuservice.updaterecord(stu);
		return "Record updated";
	}
	
}
