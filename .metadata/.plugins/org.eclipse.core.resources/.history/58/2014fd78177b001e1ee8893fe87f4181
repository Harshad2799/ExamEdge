package com.abm.examedge.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.abm.examedge.entity.SubjectTable;
import com.abm.examedge.service.subjectService;

@RestController
public class subjectController {
	
	@Autowired
	private subjectService subservice;
	
	
	//localhost:8080/addsubject url for adding subject
	@PostMapping("/addsubject")
	public String addsubject(SubjectTable sub) {
		subservice.addsubject(sub);
		return "Subject added successfully";
	}
	
	//
	
	@GetMapping("/searrch")
		public Optional<SubjectTable> search(@RequestParam int id){
		return subservice.SearchStudent(id);

		}
	}

