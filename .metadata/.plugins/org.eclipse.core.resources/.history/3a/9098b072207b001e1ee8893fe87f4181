package com.abm.examedge.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

import com.abm.examedge.entity.SubjectTable;
import com.abm.examedge.interfaces.subjectInterface;

@Service
public class subjectService {
	
	@Autowired
	private subjectInterface subrepo;
	
	
	public void addsubject(SubjectTable sub) {
		subrepo.save(sub);
	}
	
	public ResponseEntity<SubjectTable> SearchStudent(int id) {
		Optional<SubjectTable> subjectOptional = subrepo.findById(id);
		if (subjectOptional.isPresent()) {
            return ResponseEntity.ok(subjectOptional.get());
        } else {
            // Return a 404 Not Found response if the entity is not found
            return "data not available";
        }
	}
	
	
	public List<SubjectTable> searchAll(){
		List<SubjectTable> list = subrepo.findAll();
		return list;
	}
	
}
